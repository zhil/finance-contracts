{
  "name": "@0xflair/finance-contracts",
  "version": "1.0.0",
  "description": "Smart contracts running the Flair Finance platform.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "test": "npx hardhat test --network hardhat",
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network hardhat"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "smart-contract",
    "defi",
    "funding",
    "nft"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "author": "0xflair",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.7",
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.2.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.7.0",
    "@truffle/hdwallet-provider": "^1.2.6",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eth-sig-util": "^2.5.4",
    "ethereum-waffle": "^3.3.0",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^6.2.1",
    "ethers": "^5.1.4",
    "hardhat": "^2.1.2",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.7.5",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.4",
    "lint-staged": "^11.1.1",
    "lodash": "^4.17.21",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.16",
    "uuid": "^8.3.2",
    "web3": "^1.3.5"
  }
}
